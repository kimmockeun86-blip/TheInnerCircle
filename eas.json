{
    "cli": {
        "version": ">= 12.0.0",
        "appVersionSource": "local"
    },
    "build": {
        "development": {
            "developmentClient": true,
            "distribution": "internal",
            "android": {
                "buildType": "apk"
            }
        },
        "preview": {
            "distribution": "internal",
            "android": {
                "buildType": "apk"
            },
            "env": {
                "APP_ENV": "preview"
            }
        },
        "production": {
            "android": {
                "buildType": "app-bundle"
            },
            "ios": {
                "autoIncrement": true
            },
            "env": {
                "APP_ENV": "production"
            }
        }
    },
    "submit": {
        "production": {}
    }
}